<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeBlack" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:actionBarStyle">@style/actionBarGrey</item>
        <item name="android:textColor">@color/Wheat</item>
    </style>
    <style name="AppThemeWhite" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/Fuchsia</item>
        <item name="android:colorBackground">@color/Fuchsia</item>
        <item name="android:actionBarStyle">@style/actionBarFuchsia</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppThemePink" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/Fuchsia</item>
        <item name="android:colorBackground">@color/Fuchsia</item>
        <item name="android:actionBarStyle">@style/actionBarFuchsia</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeOrange" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/Fuchsia</item>
        <item name="android:colorBackground">@color/Fuchsia</item>
        <item name="android:actionBarStyle">@style/actionBarFuchsia</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppThemeGreen" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/Fuchsia</item>
        <item name="android:colorBackground">@color/Fuchsia</item>
        <item name="android:actionBarStyle">@style/actionBarFuchsia</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppThemeTeal" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/Fuchsia</item>
        <item name="android:colorBackground">@color/Fuchsia</item>
        <item name="android:actionBarStyle">@style/actionBarFuchsia</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="actionBarGrey" parent="android:Widget.Holo.ActionBar.Solid" >
        <item name="android:background">@color/LightGrey</item>
        <item name="android:backgroundStacked">@color/LightGrey</item>
        <item name="android:backgroundSplit">@color/LightGrey</item>
    </style>

    <style name="actionBarFuchsia" parent="android:Widget.Holo.ActionBar.Solid" >
        <item name="android:background">@color/HotPink</item>
        <item name="android:backgroundStacked">@color/HotPink</item>
        <item name="android:backgroundSplit">@color/HotPink</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="Headline" parent="android:Theme.Holo.Light.DarkActionBar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="UserDetailsEditText" parent="android:Theme.Holo.Light.DarkActionBar" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
    <style name="ButtonStyleBottom" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>


    </style>
</resources>
