<resources>

    <!--the dark theme-->
    <style name="AppThemeBlack" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:colorBackground">@color/bg_dark</item>
        <item name="android:actionBarStyle">@style/actionBarDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="actionBarDark" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/action_bar_dark</item>
        <item name="android:backgroundStacked">@color/action_bar_dark</item>
        <item name="android:backgroundSplit">@color/action_bar_dark</item>
    </style>

    <!--the white theme-->
    <style name="AppThemeWhite" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/bg_light</item>
        <item name="android:colorBackground">@color/bg_light</item>

        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorPrimary">@color/text_color_dark</item>
        <item name="android:textColorSecondary">@color/bg_dark</item>
        <item name="android:actionBarStyle">@style/actionBarWhite</item>
    </style>

    <style name="actionBarWhite" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/action_bar_light</item>
        <item name="android:backgroundStacked">@color/action_bar_light</item>
        <item name="android:backgroundSplit">@color/action_bar_light</item>
    </style>

    <!--the pink theme-->
    <style name="AppThemePink" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/bg_pink</item>
        <item name="android:colorBackground">@color/bg_pink</item>
        <item name="android:actionBarStyle">@style/actionBarPink</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/bg_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="actionBarPink" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/action_bar_pink</item>
        <item name="android:backgroundStacked">@color/action_bar_pink</item>
        <item name="android:backgroundSplit">@color/action_bar_pink</item>
    </style>

    <!--the green theme-->
    <style name="actionBarOrange" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/action_bar_green</item>
        <item name="android:backgroundStacked">@color/action_bar_green</item>
        <item name="android:backgroundSplit">@color/action_bar_green</item>
    </style>

    <style name="AppThemeGreen" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/bg_green</item>
        <item name="android:colorBackground">@color/bg_green</item>
        <item name="android:actionBarStyle">@style/actionBarGreen</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/bg_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="actionBarGreen" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/action_bar_green</item>
        <item name="android:backgroundStacked">@color/action_bar_green</item>
        <item name="android:backgroundSplit">@color/action_bar_green</item>
    </style>

    <!--the blue theme-->
    <style name="AppThemeLightBlue" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/bg_teal</item>
        <item name="android:colorBackground">@color/bg_teal</item>
        <item name="android:actionBarStyle">@style/actionBarTeal</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/bg_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="actionBarTeal" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/action_bar_teal</item>
        <item name="android:backgroundStacked">@color/action_bar_teal</item>
        <item name="android:backgroundSplit">@color/action_bar_teal</item>
    </style>

    <!--transparent theme-->
    <style name="Theme.Transparent" parent="android:Theme.Black">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--headline style , used as a header in many activities-->
    <style name="Headline" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_headlines</item>
        <item name="android:textColor">?textCustomColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--style for edittext in userDetails activity-->
    <style name="UserDetailsEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <!--style for the ok,cancel button accros the app-->
    <style name="ButtonStyleBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>

    </style>


    <!--test-->
    <style name="EditEventCustomActionButtonImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="EditEventCustomActionButton" parent="android:style/Widget.Holo.Light.ActionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditEventCustomActionButtonText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/actionMenuTextAppearance</item>
        <item name="android:textColor">?android:attr/actionMenuTextColor</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
