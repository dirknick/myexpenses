<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/Headline"
            android:text="@string/textview_headline_category_name" />

        <EditText
            android:id="@+id/etCatName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/textview_hint_headline_category_name"
            android:layout_marginBottom="@dimen/bottom_margin_headlines_small"
            android:inputType="text"
            android:selectAllOnFocus="true" />

        <LinearLayout
            android:id="@+id/llCatColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/bottom_margin_headlines_small">

            <TextView
                style="@style/Headline"
                android:text="@string/textview_headline_category_color"
                android:layout_weight="0.2" />

            <ImageButton
                android:id="@+id/ibCatColor"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@android:drawable/ic_input_add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCatPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/bottom_margin_headlines_small">

            <TextView
                style="@style/Headline"
                android:text="@string/textview_headline_category_preview"
                android:layout_width="wrap_content" />

            <myexpenses.ng2.com.myexpenses.Utils.LetterImageView
                android:id="@+id/livCatPreview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bCancel"
                style="@style/ButtonStyleBottom"
                android:text="@string/button_cancel" />

            <Button
                android:id="@+id/bOK"
                style="@style/ButtonStyleBottom"
                android:text="@string/button_ok" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
