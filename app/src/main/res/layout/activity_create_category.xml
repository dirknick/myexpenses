<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="myexpenses.ng2.com.myexpenses.Activities.CreateCategoryActivity"
    android:background="@color/teal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llCatName"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:weightSum="2"
        >



        <TextView
            android:text="Write the name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/DarkRed"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:textStyle="italic"
            android:gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etCatName"
            android:text="Name"
            android:textColor="#000000"
            android:ems="10"
            android:layout_weight="1"
            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llCatColor"
        android:orientation="horizontal"
        android:layout_below="@+id/llCatName"
        android:weightSum="1"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Choose Color"
            android:textColor="@color/DarkRed"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:layout_weight="0.8"
            android:textStyle="italic"
            android:gravity="center"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:id="@+id/ibCatColor"
            android:layout_weight="0.2"
            android:paddingLeft="15dp"
            style="?android:borderlessButtonStyle"
            />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCatColor"
        android:orientation="horizontal"
        android:id="@+id/llCatPreview"
        android:layout_marginTop="60dp"
        android:weightSum="1"
        >

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbCatPreview"
            android:checked="false"
            android:clickable="true"
            android:text="Preview Category"
            android:textSize="20sp"
            android:textColor="@color/DarkRed"
            android:textStyle="italic"
            android:layout_weight="0.8"
            android:gravity="center"


            />

        -->
        <myexpenses.ng2.com.myexpenses.Utils.LetterImageView
            android:id="@+id/livCatPreview"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:paddingTop="25dp"
            android:layout_weight="0.2"
            />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCatPreview"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="50dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/bCatOk"
            android:text="Ok"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:background="@color/teal"


            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/bCatCancel"
            android:text="Cancel"
           android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:background="@color/teal"

            />


        </LinearLayout>

</RelativeLayout>
