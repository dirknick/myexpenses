<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivGridItem"
        android:layout_width="@dimen/export_image_size"
        android:layout_height="@dimen/export_image_size">

    </ImageView>

    <TextView
        android:id="@+id/tvGridItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Grid Item"
        android:textSize="@dimen/text_size_headlines" />

</LinearLayout>