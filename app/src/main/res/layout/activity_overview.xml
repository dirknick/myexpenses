<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="@dimen/layout_padding">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/layout_padding"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_size_username"
                android:text="Nikos"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llOverviewStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_color_background"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        style="@style/Headline"
                        android:layout_weight="1.8"
                        android:gravity="center_horizontal"
                        android:text="@string/string_balance" />

                    <TextView
                        android:id="@+id/tvOverviewBalance"
                        style="@style/Headline"
                        android:layout_weight="1.2"
                        android:gravity="center_horizontal"
                        android:text="1000.0 €"
                        android:textSize="@dimen/value_size_big" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        style="@style/Headline"
                        android:layout_weight="1.8"
                        android:gravity="center_horizontal"
                        android:text="@string/string_savings" />

                    <TextView
                        android:id="@+id/tvOverviewSavings"
                        style="@style/Headline"
                        android:layout_weight="1.2"
                        android:gravity="center_horizontal"
                        android:text="1000.0 €"
                        android:textSize="@dimen/value_size_big" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNoTransactionMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_color_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_no_records"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPieView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_color_background"
                android:orientation="horizontal">

                <com.ngngteam.pocketwallet.Extra.MagnificentChart
                    android:layout_width="@dimen/pie_view_width"
                    android:layout_height="@dimen/pie_view_height"
                    android:layout_margin="10dp"
                    app:showTitle="true"
                    app:animation="true"
                    app:round="false"
                    app:shadow="false"
                    android:id="@+id/mcPie" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvPieHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_pie_heading"
                        android:gravity="center"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp">

                            <com.ngngteam.pocketwallet.Extra.LetterImageView
                                android:id="@+id/livLegendExpense"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/tvLegendExpenseText"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="@string/legend_text_expense"
                                android:paddingLeft="10dp"
                                android:gravity="left|center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp">

                            <com.ngngteam.pocketwallet.Extra.LetterImageView
                                android:id="@+id/livLegendIncome"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/tvLegendIncomeText"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="@string/legend_text_income"
                                android:paddingLeft="10dp"
                                android:gravity="left|center_vertical" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOverviewLastTransactions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_color_background"
                android:layout_marginTop="10dp"
                android:padding="@dimen/layout_padding_small"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llOverviewLastExpense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/line_seperator_fade" />

                    <TextView
                        style="@style/Headline"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/text_last_expense" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/line_seperator_fade_reverse" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="?android:attr/selectableItemBackground"
                        android:weightSum="3">

                        <com.ngngteam.pocketwallet.Extra.LetterImageView
                            android:id="@+id/livLastExpense"
                            android:layout_width="@dimen/category_icon_width"
                            android:layout_height="@dimen/category_icon_height"
                            android:layout_margin="10dp" />

                        <TextView
                            android:id="@+id/tvLastExpenseDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/layout_padding_small"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_weight="1.3"
                            android:gravity="center_horizontal"
                            android:text="Fri 25 April" />

                        <TextView
                            android:id="@+id/tvLastExpenseValue"
                            style="@style/Headline"
                            android:layout_weight="1.7"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:textColor="@color/red"
                            android:text="50 $" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOverviewLastIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/line_seperator_fade" />

                    <TextView
                        android:id="@+id/tvLastIncome"
                        style="@style/Headline"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/text_last_income" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/line_seperator_fade_reverse" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="?android:attr/selectableItemBackground"
                        android:weightSum="3">

                        <com.ngngteam.pocketwallet.Extra.LetterImageView
                            android:id="@+id/livLastIncome"
                            android:layout_width="@dimen/category_icon_width"
                            android:layout_height="@dimen/category_icon_height"
                            android:layout_margin="10dp" />

                        <TextView
                            android:id="@+id/tvLastIncomeDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/layout_padding_small"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_weight="1.3"
                            android:gravity="center_horizontal"
                            android:text="Mon 26 January" />

                        <TextView
                            android:id="@+id/tvLastIncomeValue"
                            style="@style/Headline"
                            android:layout_weight="1.7"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:textColor="@color/green"
                            android:text="400 $" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/nav_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@drawable/line_seperator_solid"
        android:padding="5dp"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>
