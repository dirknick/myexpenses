<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardBackgroundColor="?cardCustomBackground"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tvUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/layout_padding"
                        android:maxLines="2"
                        android:text="Nikos"
                        android:textSize="@dimen/text_size_username"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <me.grantland.widget.AutofitTextView
                            style="@style/Headline"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            android:text="@string/string_balance" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tvOverviewBalance"
                            style="@style/Headline"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            android:text="1000.0 €"
                            android:textSize="@dimen/value_size_big" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <me.grantland.widget.AutofitTextView
                            style="@style/Headline"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            android:text="@string/string_savings" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tvOverviewSavings"
                            style="@style/Headline"
                            android:layout_weight="1.5"
                            android:gravity="center_horizontal"
                            android:text="1000.0 €"
                            android:textSize="@dimen/value_size_big" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardBackgroundColor="?cardCustomBackground"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/layout_padding_small">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:text="@string/text_no_records"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="?textCustomColor" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_pie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardBackgroundColor="?cardCustomBackground"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ngngteam.pocketwallet.Extra.MagnificentChart
                        android:id="@+id/mcPie"
                        android:layout_width="@dimen/pie_view_width"
                        android:layout_height="@dimen/pie_view_height"
                        android:layout_margin="10dp"
                        app:animation="true"
                        app:chartbackground="?cardCustomBackground"
                        app:round="false"
                        app:shadow="false"
                        app:showTitle="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tvPieHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="2"
                            android:text="@string/text_pie_heading"
                            android:textColor="?textCustomColor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <com.ngngteam.pocketwallet.Extra.LetterImageView
                                    android:id="@+id/livLegendExpense"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center" />

                                <me.grantland.widget.AutofitTextView
                                    android:id="@+id/tvLegendExpenseText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center_vertical"
                                    android:maxLines="2"
                                    android:paddingLeft="10dp"
                                    android:text="@string/legend_text_expense"
                                    android:textColor="?textCustomColor" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <com.ngngteam.pocketwallet.Extra.LetterImageView
                                    android:id="@+id/livLegendIncome"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center" />

                                <me.grantland.widget.AutofitTextView
                                    android:id="@+id/tvLegendIncomeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center_vertical"
                                    android:maxLines="2"
                                    android:paddingLeft="10dp"
                                    android:text="@string/legend_text_income"
                                    android:textColor="?textCustomColor" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_last_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                card_view:cardBackgroundColor="?cardCustomBackground"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llOverviewLastExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/line_seperator_fade" />

                        <me.grantland.widget.AutofitTextView
                            style="@style/Headline"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/text_last_expense" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/line_seperator_fade_reverse" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.ngngteam.pocketwallet.Extra.LetterImageView
                                android:id="@+id/livLastExpense"
                                android:layout_width="@dimen/category_icon_width"
                                android:layout_height="@dimen/category_icon_height"
                                android:layout_margin="10dp" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/tvLastExpenseDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/layout_padding_small"
                                android:text="Fri 25 April"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="?textCustomColor" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/tvLastExpenseValue"
                                style="@style/Headline"
                                android:layout_width="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center_horizontal"
                                android:text="50 $"
                                android:textColor="@color/red" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOverviewLastIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/line_seperator_fade" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tvLastIncome"
                            style="@style/Headline"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/text_last_income" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/line_seperator_fade_reverse" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.ngngteam.pocketwallet.Extra.LetterImageView
                                android:id="@+id/livLastIncome"
                                android:layout_width="@dimen/category_icon_width"
                                android:layout_height="@dimen/category_icon_height"
                                android:layout_margin="10dp" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/tvLastIncomeDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/layout_padding_small"
                                android:text="Mon 26 January"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="?textCustomColor" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/tvLastIncomeValue"
                                style="@style/Headline"
                                android:layout_width="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center_horizontal"
                                android:text="400 $"
                                android:textColor="@color/green" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/nav_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/ab_solid_appcompat_custom_light"
        android:choiceMode="singleChoice"
        android:divider="@drawable/line_seperator_solid"
        android:dividerHeight="1dp"
        android:padding="5dp" />

</android.support.v4.widget.DrawerLayout>