<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/layout_padding_small">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <myexpenses.ng2.com.myexpenses.Extra.LetterImageView
            android:id="@+id/livcat"
            android:layout_width="@dimen/category_icon_width"
            android:layout_height="@dimen/category_icon_height"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Category Name"
            android:id="@+id/tvName"
            android:padding="@dimen/layout_padding"
            android:gravity="center"
            android:layout_weight="0.8" />
    </LinearLayout>

</LinearLayout>