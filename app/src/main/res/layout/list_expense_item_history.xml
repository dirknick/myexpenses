<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_color_background"
    android:padding="5dp">

    <myexpenses.ng2.com.myexpenses.Utils.LetterImageView
        android:id="@+id/livhistory"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Price â‚¬"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvPrice"
        android:text="20/11/2014"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff7f00"
        android:textSize="18sp"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tvPrice"
        android:layout_toRightOf="@+id/livhistory"
        android:layout_alignParentTop="true"
        android:text="Category"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/livhistory"
        android:layout_toLeftOf="@id/tvDate"
        android:layout_alignParentBottom="true"
        android:text="These are some notes"
        android:textColor="@color/Gray"
        android:padding="5dp"
        android:textStyle="bold" />
</RelativeLayout>