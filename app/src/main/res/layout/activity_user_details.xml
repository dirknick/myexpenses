<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/Headline"
            android:text="Username" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/line_seperator_fade" />

        <EditText
            android:id="@+id/etUsername"
            style="@style/UserDetailsEditText"
            android:hint="User"
            android:inputType="textPersonName" />

        <TextView

            android:id="@+id/textView2"
            style="@style/Headline"
            android:text="Current Savings" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/line_seperator_fade" />


        <EditText
            android:id="@+id/etSavings"
            style="@style/UserDetailsEditText"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView5"
            style="@style/Headline"
            android:text="Money Left Until Next Payment" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/line_seperator_fade" />

        <EditText
            android:id="@+id/etBalance"
            style="@style/UserDetailsEditText"
            android:inputType="numberDecimal"
            android:text="0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chbSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:text="On Salary"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                style="@style/Headline"
                android:text="Salary Amount" />

            <EditText
                android:id="@+id/etSalary"
                style="@style/UserDetailsEditText"
                android:inputType="numberDecimal"
                android:text="1000" />

            <TextView
                android:id="@+id/textView4"
                style="@style/Headline"
                android:text="Salary" />

            <RadioGroup
                android:id="@+id/rgFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rbWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Weekly"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Monthly"
                    android:textSize="20sp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bCancel"
                style="@style/ButtonStyleBottom"
                android:text="Cancel" />

            <Button
                android:id="@+id/bOk"
                style="@style/ButtonStyleBottom"
                android:text="OK" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>