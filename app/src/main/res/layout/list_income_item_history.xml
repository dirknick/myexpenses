<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_small">

        <com.ngngteam.pocketwallet.Extra.LetterImageView
            android:id="@+id/livhistoryincome"
            android:layout_width="@dimen/category_icon_width"
            android:layout_height="@dimen/category_icon_height"
            android:layout_centerVertical="true"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/tvHIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/layout_padding_small"
            android:text="20.5 â‚¬"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_price_history_item"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvHIncome"
            android:padding="@dimen/layout_padding_small"
            android:text="20/11/2014"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff7f00"
            android:textSize="@dimen/text_size_date_history_item"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvHIncome"
            android:layout_toRightOf="@+id/livhistoryincome"
            android:padding="@dimen/layout_padding_small"
            android:text="Category"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/text_size_category_history_item"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
