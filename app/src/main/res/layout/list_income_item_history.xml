<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_color_background"
    android:padding="5dp">

    <myexpenses.ng2.com.myexpenses.Utils.LetterImageView
        android:id="@+id/livhistoryincome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/tvHIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="Price â‚¬"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvHIncome"
        android:padding="5dp"
        android:text="20/11/2014"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff7f00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvHIncome"
        android:layout_toRightOf="@+id/livhistoryincome"
        android:padding="5dp"
        android:text="Category"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>

