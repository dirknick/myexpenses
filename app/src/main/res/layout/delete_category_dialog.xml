<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You decide to delete a category but what happens to the data!!!You can delete all the data with this category just press Ok!! Or you can change their category."
        android:id="@+id/tvProcessData"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cbancat"
        android:layout_below="@+id/tvProcessData"
        android:checked="false"
        android:text="Choose another Category"
        android:textSize="20sp"
        android:layout_marginTop="30dp"

        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llChooseCategory"
        android:layout_below="@+id/cbancat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textColor="@color/red"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdCategories"

            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llChooseCategory"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bdeletecOk"
            android:text="OK"

            android:layout_weight="1"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bdeletecCancel"
            android:text="CANCEL"

            android:layout_weight="1"
            />



        </LinearLayout>

</RelativeLayout>
</ScrollView>
