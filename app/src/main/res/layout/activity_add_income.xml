<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        android:paddingBottom="50dp"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:paddingTop="@dimen/layout_padding"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00 â‚¬"
                android:textSize="@dimen/text_size_main_price" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/bottom_margin_headlines_small"
                android:background="@drawable/line_seperator_solid" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin_headlines_small"
                android:weightSum="6">

                <TextView
                    style="@style/Headline"
                    android:layout_weight="3.5"
                    android:text="@string/textview_headline_source" />


                <Spinner
                    android:id="@+id/sIncomeCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:scrollbars="none" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/bottom_margin_headlines_small"
                android:background="@drawable/line_seperator_solid" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin_headlines_small"
                android:orientation="horizontal"
                android:weightSum="9">

                <TextView
                    style="@style/Headline"
                    android:layout_weight="2.5"
                    android:text="@string/textview_headline_date" />

                <EditText
                    android:id="@+id/etIncomeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/ibIncomeCalendar"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:src="@drawable/calendar" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bCancel"
            style="@style/ButtonStyleBottom"
            android:background="@color/bpRed"
            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/bOK"
            style="@style/ButtonStyleBottom"
            android:background="@color/YellowGreen"
            android:text="@string/button_ok" />

    </LinearLayout>

</RelativeLayout>