<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myexpenses.ng2.com.myexpenses.Activities.AddExpenseActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:textColor="@color/blue"
        android:id="@+id/tvCategories"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sCategories"
        android:layout_below="@+id/tvCategories"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvCategories"
        android:layout_alignEnd="@+id/tvCategories"
        android:entries="@array/expenses_category"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/etPrice"
        android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/tvDate"
        android:textColor="@color/blue"
        android:layout_toStartOf="@+id/etPrice"
        android:layout_marginTop="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/sCategories"
        android:layout_alignRight="@+id/sCategories"
        android:layout_alignEnd="@+id/sCategories" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:id="@+id/ibCalendar"
        android:layout_alignTop="@+id/tvDate"
        android:layout_alignRight="@+id/etPrice"
        android:layout_alignEnd="@+id/etPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Photo/Receive"
        android:id="@+id/tvPhoto"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:layout_toStartOf="@+id/etPrice"
        android:layout_below="@+id/ibCalendar"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/ivReceive"
        android:layout_below="@+id/ibCalendar"
        android:layout_toRightOf="@+id/tvPhoto"
        android:layout_toEndOf="@+id/tvPhoto"
        android:src="@drawable/ic_action_camera" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ibCamera"
        android:layout_alignTop="@+id/tvPhoto"
        android:layout_toRightOf="@+id/ivReceive"
        android:layout_toEndOf="@+id/ivReceive" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llNotes"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/ivReceive"
        android:layout_toStartOf="@+id/ivReceive"
        android:layout_alignRight="@+id/ibCamera"
        android:layout_alignEnd="@+id/ibCamera">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Notes"
            android:textColor="@color/blue"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/tvNotes"
            android:layout_weight="1"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etNotes"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Your notes"
            />


        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llButtons"
        android:orientation="horizontal"
        android:layout_below="@+id/llNotes"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        >

      <Button
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Ok"
          android:background="@color/OrangeRed"
          android:id="@+id/bOK"
          android:layout_marginRight="7dp"
          />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@color/OrangeRed"
            android:id="@+id/bCancel"
            android:layout_marginLeft="7dp"
            />


        </LinearLayout>

</RelativeLayout>

</ScrollView>