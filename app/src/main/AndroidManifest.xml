<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myexpenses.ng2.com.myexpenses" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.LauncherPickerActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AddExpenseActivity"
            android:label="@string/title_activity_add_expense" >
        </activity>
        <activity
            android:name=".Activities.AddIncomeActivity"
            android:label="@string/title_activity_add_income" >
        </activity>
        <activity
            android:name=".Activities.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Activities.UserDetailsActivity"
            android:label="@string/title_activity_user_details" >
        </activity>
        <activity
            android:name=".Activities.ReminderSettingsActivity"
            android:label="@string/title_activity_reminder_settings" >
        </activity>

        <receiver
            android:name=".BroadcastReceivers.ReminderReceiver"
            android:enabled="true" >
        </receiver>

        <service
            android:name=".Utils.AlarmService"
            android:enabled="true" >
        </service>

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main_activity2" >
        </activity>
        <activity
            android:name=".Activities.PasswordActivity"
            android:label="@string/title_activity_password" >
        </activity>
        <activity
            android:name=".Activities.OverviewActivity"
            android:label="@string/title_activity_launcher_picker" >
        </activity>
        <activity
            android:name=".Activities.PasswordSettingsActivity"
            android:label="@string/title_activity_password_settings" >
        </activity>
        <activity
            android:name=".Activities.CategoriesManagerActivity"
            android:label="@string/title_activity_categories_manager" >
        </activity>
    </application>

</manifest>
